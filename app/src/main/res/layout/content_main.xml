<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jianzhang.nfccardread.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@android:id/candidatesArea"
        style="@style/custom_tv"
        android:text="@string/tv_noNfc"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/content_cardReady"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@android:id/text1"
            style="@style/custom_tv"
            android:layout_marginTop="70dp"
            tools:text="4444 - 4444 - 4444 - 4444" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:id="@android:id/title"-->
                <!--style="@style/custom_tv"-->
                <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->
                <!--android:layout_marginBottom="@dimen/activity_vertical_margin"-->
                <!--android:layout_weight="1"-->
                <!--android:text="John Doe" />-->

            <TextView
                android:id="@android:id/text2"
                style="@style/custom_tv"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:text="22/15" />

            <ImageView
                android:id="@android:id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/content_putCard"
        style="@style/custom_tv"
        android:drawableTop="@mipmap/teasy_logo"
        android:gravity="center"
        android:text="@string/tv_tapYourCard"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"/>

</LinearLayout>
